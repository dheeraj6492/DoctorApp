<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pinnainfotech.doctorapp.Fragments.Fragment_MeetUs">

    <RelativeLayout
        android:id="@+id/rylt_text"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:text="HOME"
            android:textSize="16dp"
            android:textColor="@color/textcol"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/rylt_text"
        android:id="@+id/rylt_meet"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rylt_Image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5">

               <android.support.v7.widget.CardView
                   android:id="@+id/cardView"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <android.support.v7.widget.AppCompatImageView
                       android:layout_width="wrap_content"
                       android:id="@+id/imageView"
                         android:background="@drawable/food_banner"
                       android:layout_height="wrap_content" />
               </android.support.v7.widget.CardView>


            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:id="@+id/rylt_ListView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5">
                <ListView
                    android:layout_width="match_parent"
                    android:id="@+id/listView"
                    android:layout_height="match_parent">

                </ListView>




            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
