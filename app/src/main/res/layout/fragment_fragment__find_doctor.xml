<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pinnainfotech.doctorapp.FindDoctorActivity">


    <RelativeLayout
        android:id="@+id/rylt_seachId2"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbarrylt"
        android:background="@color/color4"
        android:layout_height="100dp">
        <android.support.v7.widget.AppCompatCheckedTextView
            android:id="@+id/textidFind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Doctor"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/whitecolor"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:id="@+id/rylt_seachId"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"

            android:layout_below="@+id/textidFind"
            android:layout_height="40dp">
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_Text_Serach"
                android:layout_width="match_parent"
                android:hint="Find the Doctor"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/search_shape"
                android:layout_height="match_parent" />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/rylt_seachId2"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:id="@+id/list_Doctor"
            android:layout_height="match_parent">

        </ListView>

    </RelativeLayout>

</RelativeLayout>
