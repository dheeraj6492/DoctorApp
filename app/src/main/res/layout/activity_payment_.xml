<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
    android:background="@color/unchecked"

android:layout_height="match_parent">
<RelativeLayout
android:id="@+id/toolbarrylt"
android:layout_width="match_parent"
android:layout_height="?attr/actionBarSize">
<include
    android:id="@+id/toolbar"
    layout="@layout/toolbar_activity">
</include>
</RelativeLayout>

<RelativeLayout
    android:id="@+id/rylt_payment"
android:layout_width="match_parent"
android:layout_below="@+id/toolbarrylt"
android:background="@color/colorPrimary"
android:layout_height="?attr/actionBarSize">
<android.support.v7.widget.AppCompatButton
android:id="@+id/bckButton"
android:layout_width="30dp"
android:layout_centerVertical="true"
android:background="@mipmap/left_arrow"
android:layout_marginLeft="10dp"
android:layout_height="20dp" />
<TextView
android:layout_width="wrap_content"
android:text="Payment"
android:textColor="@color/white"
    android:textStyle="bold"
android:textSize="16dp"
android:layout_centerInParent="true"
android:layout_height="wrap_content" />



</RelativeLayout>
    <RelativeLayout
        android:id="@+id/payment_cardId"
        android:layout_width="match_parent"
        android:layout_below="@+id/rylt_payment"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/m5dp"
        android:layout_marginRight="10dp"
        android:layout_height="110dp">


        <android.support.v7.widget.CardView
            android:id="@+id/cardView_Id"
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/card_corner_radius"
            android:elevation="@dimen/card_elevation"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="@dimen/m0dp"
                    android:layout_weight=".5"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/doctor_image"
                        android:layout_width="@dimen/m96dp"
                        android:layout_height="@dimen/m96dp"
                        android:layout_marginTop="@dimen/m10dp"
                        android:layout_marginLeft="@dimen/m20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/doctor_one"
                        app:civ_border_width="@dimen/m2dp"
                        app:civ_border_color="@color/white"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/m0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/m20dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/id_doctor_Name"
                            android:layout_width="wrap_content"
                            android:singleLine="true"
                            android:textSize="@dimen/m16dp"
                            android:text="Dr Sunny Tomar"
                            android:textStyle="bold"
                            android:textColor="@color/color8"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/id_doctor_Specialty"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:textSize="@dimen/m12dp"
                            android:text="MBBS MD MEDICINE,DNB(Cardiology)"
                            android:textColor="@color/color8"


                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/id_doctor_Specialty1"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:text="Certified Diabetes"
                            android:textColor="@color/color8"


                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/id_doctor_Specialty2"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:textSize="@dimen/m12dp"
                            android:text="English,Hindi,Marathi"
                            android:textColor="@color/color8"


                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/payment_cardId"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/m5dp"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1.7"
                android:layout_height="@dimen/m0dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView_Id2"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    android:elevation="@dimen/card_elevation"
                    android:layout_height="match_parent">

                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:weightSum="6"
                          android:layout_height="match_parent">
                          <RelativeLayout
                              android:layout_width="match_parent"
                              android:layout_weight="1"
                              android:layout_height="@dimen/m0dp">
                              <TextView
                                  android:id="@+id/Conslutation_summary"
                                  android:layout_width="wrap_content"
                                  android:layout_marginLeft="@dimen/m20dp"
                                  android:textStyle="bold"
                                  android:text="CONSULTATION SUMMARY"
                                  android:layout_centerVertical="true"
                                  android:layout_height="wrap_content" />
                              <TextView
                                  android:layout_width="match_parent"
                                  android:layout_below="@+id/Conslutation_summary"
                                  android:textColor="@color/color4"
                                  android:textStyle="bold"
                                  android:layout_height="@dimen/m2dp"/>

                          </RelativeLayout>


                          <RelativeLayout
                              android:layout_width="match_parent"
                              android:layout_weight="1"
                              android:layout_height="@dimen/m0dp">

                              <RelativeLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent">
                                  <TextView
                                      android:id="@+id/txv_Date"
                                      android:layout_width="wrap_content"
                                      android:text="Date"
                                      android:textStyle="bold"
                                      android:layout_centerVertical="true"
                                      android:layout_marginLeft="@dimen/m20dp"
                                      android:textSize="@dimen/m14dp"
                                      android:layout_height="wrap_content"/>
                                  <TextView
                                      android:id="@+id/tv_Date"
                                      android:layout_width="wrap_content"
                                      android:text="Thu,28 Dec 2018"
                                      android:textStyle="bold"
                                     android:layout_toRightOf="@+id/txv_Date"


                                      android:layout_centerVertical="true"
                                      android:layout_marginLeft="@dimen/m160dp"
                                      android:textSize="@dimen/m14dp"
                                      android:layout_height="wrap_content"/>

                                  <TextView
                                      android:layout_width="match_parent"
                                      android:layout_below="@+id/tv_Date"
                                      android:textStyle="bold"
                                      android:textColor="@color/color4"
                                      android:layout_height="@dimen/m2dp"/>

                              </RelativeLayout>

                          </RelativeLayout>


                          <RelativeLayout
                              android:layout_width="match_parent"
                              android:layout_weight="1"
                              android:layout_height="@dimen/m0dp">


                              <RelativeLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent">
                                  <TextView
                                      android:id="@+id/txv_Time"
                                      android:layout_width="wrap_content"
                                      android:text="Time"
                                      android:textStyle="bold"
                                      android:layout_centerVertical="true"
                                      android:layout_marginLeft="@dimen/m20dp"
                                      android:textSize="@dimen/m14dp"
                                      android:layout_height="wrap_content"/>
                                  <TextView
                                      android:id="@+id/tv_Time"
                                      android:layout_width="wrap_content"
                                      android:text="6:15 PM"
                                      android:textStyle="bold"
                                      android:layout_alignParentRight="true"
                                      android:layout_marginRight="@dimen/m90dp"
                                      android:layout_centerVertical="true"
                                      android:textSize="@dimen/m14dp"
                                      android:layout_height="wrap_content"/>

                                  <TextView
                                      android:layout_width="match_parent"
                                      android:layout_below="@+id/tv_Time"
                                      android:textStyle="bold"
                                      android:textColor="@color/color4"
                                      android:layout_height="@dimen/m2dp"/>

                              </RelativeLayout>

                          </RelativeLayout>


                          <RelativeLayout
                              android:layout_width="match_parent"
                              android:layout_weight="1"
                              android:layout_height="@dimen/m0dp">

                              <RelativeLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent">
                                  <TextView
                                      android:id="@+id/txv_Fee"
                                      android:layout_width="wrap_content"
                                      android:text="Fee"
                                      android:textStyle="bold"
                                      android:layout_centerVertical="true"
                                      android:layout_marginLeft="@dimen/m20dp"
                                      android:textSize="@dimen/m14dp"
                                      android:layout_height="wrap_content"/>
                                 <RelativeLayout
                                     android:id="@+id/rylt_ammount"
                                     android:layout_toRightOf="@+id/txv_Fee"
                                     android:layout_centerVertical="true"
                                     android:layout_marginLeft="@dimen/m90dp"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content">
                                     <TextView
                                         android:id="@+id/tv_Fee"
                                         android:layout_width="wrap_content"
                                         android:text="@string/rupee"
                                         android:textStyle="bold"
                                         android:layout_centerVertical="true"
                                         android:layout_marginLeft="@dimen/m100dp"
                                         android:textSize="@dimen/m14dp"
                                         android:layout_height="wrap_content"/>

                                     <TextView
                                         android:layout_width="wrap_content"
                                         android:id="@+id/tv_FeeRs"
                                         android:layout_centerVertical="true"
                                         android:layout_marginLeft="@dimen/m5dp"
                                         android:text="400"
                                         android:textStyle="bold"
                                         android:layout_toRightOf="@+id/tv_Fee"
                                         android:layout_height="wrap_content" />


                                 </RelativeLayout>

                                  <TextView
                                      android:layout_width="match_parent"
                                      android:layout_below="@+id/rylt_ammount"
                                      android:textColor="@color/color4"
                                      android:textStyle="bold"
                                      android:layout_height="@dimen/m2dp"/>

                              </RelativeLayout>

                          </RelativeLayout>


                          <RelativeLayout
                              android:layout_width="match_parent"
                              android:layout_weight="1"
                              android:layout_height="@dimen/m0dp">

                              <RelativeLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent">
                                  <TextView
                                      android:id="@+id/txv_Handling_Fee"
                                      android:layout_width="wrap_content"
                                      android:text="Handling fee"
                                      android:textStyle="bold"
                                      android:layout_centerVertical="true"
                                      android:layout_marginLeft="@dimen/m20dp"
                                      android:textSize="@dimen/m14dp"
                                      android:layout_height="wrap_content"/>
                                  <RelativeLayout
                                      android:id="@+id/rylt_Handling"
                                      android:layout_centerVertical="true"
                                     android:layout_marginLeft="@dimen/m35dp"
                                      android:layout_width="wrap_content"
                                      android:layout_toRightOf="@+id/txv_Handling_Fee"
                                      android:layout_height="wrap_content">

                                      <TextView
                                          android:id="@+id/tv_Handling_Fee"
                                          android:layout_width="wrap_content"
                                          android:text="@string/rupee"
                                          android:textStyle="bold"

                                          android:layout_centerVertical="true"
                                          android:layout_marginLeft="@dimen/m100dp"
                                          android:textSize="@dimen/m14dp"
                                          android:layout_height="wrap_content"/>

                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:id="@+id/tv_Handling_FeeRs"
                                          android:layout_centerVertical="true"
                                          android:layout_marginLeft="@dimen/m5dp"
                                          android:text="40"
                                          android:textStyle="bold"
                                          android:layout_toRightOf="@+id/tv_Handling_Fee"
                                          android:layout_height="wrap_content" />

                                  </RelativeLayout>
                                  <TextView
                                      android:layout_width="match_parent"
                                      android:layout_below="@+id/rylt_Handling"
                                      android:textColor="@color/color4"
                                      android:textStyle="bold"
                                      android:layout_height="@dimen/m2dp"/>

                              </RelativeLayout>

                          </RelativeLayout>

                          <RelativeLayout
                              android:layout_width="match_parent"
                              android:layout_weight="1"
                              android:layout_height="@dimen/m0dp">

                              <RelativeLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent">
                                  <TextView
                                      android:id="@+id/txv_Ammount_Pay"
                                      android:layout_width="wrap_content"
                                      android:text="Ammount Payable"
                                      android:textStyle="bold"
                                      android:layout_centerVertical="true"
                                      android:layout_marginLeft="@dimen/m20dp"
                                      android:textSize="@dimen/m14dp"
                                      android:layout_height="wrap_content"/>

                                    <RelativeLayout
                                        android:id="@+id/rylt_Ammount_Pay"
                                        android:layout_centerVertical="true"
                                        android:layout_width="wrap_content"

                                        android:layout_toRightOf="@+id/txv_Ammount_Pay"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:id="@+id/tv_Ammount_Pay"
                                            android:layout_width="wrap_content"
                                            android:text="@string/rupee"
                                            android:textStyle="bold"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="@dimen/m100dp"
                                            android:textSize="@dimen/m14dp"
                                            android:layout_height="wrap_content"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:id="@+id/tv_Ammount_PayRs"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="@dimen/m5dp"
                                            android:text="400"
                                            android:textStyle="bold"
                                            android:layout_toRightOf="@+id/tv_Ammount_Pay"
                                            android:layout_height="wrap_content" />
                                    </RelativeLayout>

                                  <TextView
                                      android:layout_width="match_parent"
                                      android:layout_below="@+id/rylt_Ammount_Pay"
                                      android:textColor="@color/color4"
                                      android:textStyle="bold"
                                      android:layout_height="@dimen/m2dp"/>

                              </RelativeLayout>

                          </RelativeLayout>

                      </LinearLayout>

                  </RelativeLayout>





                </android.support.v7.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight=".3"
                android:layout_height="@dimen/m0dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView_Id23"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/m6dp"
                    android:layout_marginBottom="@dimen/m5dp"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    android:elevation="@dimen/card_elevation"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_PROCEED"
                        android:layout_width="match_parent"

                        android:textStyle="bold"
                        android:background="@drawable/button_shape_round"

                        android:text="PROCEED"
                     android:textColor="@color/white"
                        android:layout_height="match_parent" />



                </android.support.v7.widget.CardView>


            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>